<!-- LOGIN DE  USUARIOS -->

<!DOCTYPE html>
<html lang="en">

<!-- PARTIAL HEAD -->
<%- include('./partials/head', {title: 'Login'})%>
<!--  link a css-->
<link href="/css/loginStyles.css" rel="stylesheet">
<title> Login </title>
<!-- END OF PARTIAL HEAD -->

<body>
    <div class="body-container">
        <!-- PARTIAL HEADER -->
        <%- include('./partials/header')%>
        <!-- /PARTIAL HEADER -->


        <!-- LOGIN BODY -->

        <!-- ESTE ES EL FORM DE UI KIT, PARA USARLO HAY QUE TENER LOS TAGS DE CSS Y JS PEGADOS -->
        <form class="login-container" action="/users/login" method="POST" class="uk-form-stacked">
            <h1 class="title-of-login">COMO EN CASA</h1>
            <div class="uk-margin">
                <!-- ingreso -->
                <label class="uk-form-label" for="form-stacked-text"></label>
                <div class="uk-form-controls">
                    <input class="uk-input" id="form-stacked-text" placeholder="Usuario o Email" type="text" name="name"
                        value="<%= typeof old != 'undefined' ? old.email : ''%>">
                    <% if(typeof errors != 'undefined'){ %>
                    <%	if(errors.email){ %>
                    <%= errors.email.msg %>
                    <%	} %>
                    <% } %>
                </div>

                <!-- contraseña -->
                <label class="uk-form-label" for="form-stacked-text"></label>
                <div class="uk-form-controls">
                    <input class="uk-input" id="form-stacked-text" placeholder="Contraseña" type="contraseña"
                        name="contraseña">
                </div>
                <!-- Boton -->
                <button type="submit" class="boton-iniciar">Iniciar sesión</button><br>
                <!-- Google -->
                <a href="" class="google hipervinculo">Iniciar sesión con Google</a><br>
                <!-- Hipervinculos FALTA completar la redireccion con el href -->
                <a href="" class="forget-pass hipervinculo">Olvidaste tu contraseña?</a><br>
                <p>No tenes cuenta? <a href="#REGISTER" class="hipervinculo"> Registrate</a></p><br>
            </div>
        </form>

        <!-- Naranja decoración -->
        <img src="img/naranja.jpg" alt="" class="naranja">
        <!-- LOGIN BODY -->

        <!-- PARTIAL JAVASCRIPT -->
        <!-- UIkit JS -->
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.4.6/dist/js/uikit.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.4.6/dist/js/uikit-icons.min.js"></script>
        <!-- /PARTIAL JAVASCRIPT -->

        <!-- FOOTER -->
        <%- include('./partials/footer')%>
        <!-- /FOOTER -->
    </div>
</body>

</html>