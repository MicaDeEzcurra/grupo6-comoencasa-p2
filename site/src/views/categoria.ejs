    <div>
        <article>
            <h2 class="titulo-categoria-detalle-producto" style="font-size: 20px; cursor:pointer;" id="todosProductos">Todos
                los productos</h2>
    
        </article>
    </div> -->



        <!-- Fin Categoria-->

        <!-- Naranja decoraciÃ³n -->
        <img src="img/naranja.jpg" alt="" class="naranja">

        <!-- END INDEX BODY -->
    </div>
        <!-- PARTIAL FOOTER -->
        <%- include('./partials/footer')%>
        <!-- END OF PARTIAL FOOTER -->

        <!-- UIkit JS -->
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.4.6/dist/js/uikit.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.4.6/dist/js/uikit-icons.min.js"></script>
</body>

</html>