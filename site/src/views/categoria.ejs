<!DOCTYPE html>
<html lang="en">

<!-- PARTIAL HEAD -->
<%- include('./partials/head', {title: 'Categoria', css: 'categoriaStyles.css'})%>

<!-- END OF PARTIAL HEAD -->

<body>
    <div class="body-container">
        <!-- PARTIAL HEADER -->
        <%- include('./partials/header')%>
        <!-- /PARTIAL HEADER -->

        <!--BODY HOME -->
        <!-- Inicio Categoria -->
        <h1 class="uk-heading-divider">CATEGORIA</h1>
        <ul class="categoryContainer">
            <li><a href="/categoria/1">DESAYUNO</a></li>
            <li><a href="/categoria/2">ALMUERZO</a></li>
            <li><a href="/categoria/3">MERIENDA</a></li>
            <li><a href="/categoria/4">CENA</a></li>
        </ul>




        <li>
            <div id=productContainer class="uk-child-width-1-2@s uk-child-width-1-3@m" uk-grid="masonry: true">
                <% products.forEach(function(product){ %>
                     <div>
                         <a href="/producto/detail/<%= product.id %>">
                            <div class="uk-card uk-card-default uk-flex uk-flex-center uk-flex-middle">
                             <div style="height: 300px">
                                 <img id="image" src="/img/<%= product.img %>"
                                     alt="" class="imagen-producto""
                                     alt="<%= product.name %>" class="imagen-producto">
                                 <p id="name"><%= product.name %></p>
                                 <p id="price">$<%= product.price %> </p>
                             </div>
                             </div>
                         </a>
                     </div>
                <% })%>
            </div>
        </li>

