<!DOCTYPE html>
<html lang="en">
<!-- PARTIAL HEAD -->
<%- include('./partials/head', {title: 'Buscador', css: 'buscadorStyles.css'})%>
<!-- END OF PARTIAL HEAD -->

<body>
    <div class="body-container">
        <!-- PARTIAL HEADER -->
        <%- include('./partials/header')%>
        <!-- /PARTIAL HEADER -->

        <h1 id="titleProducts" style="text-align: center;">RESULTADOS DE TU BUSQUEDA</h1>
        <% if (result.length == 0) { %>
        <p>No se encontraron resultados</p>
        <% } else { %>

        <% for( let i = 0; i < result.length; i++ ) { %>
        <div class="row justify-content-center">
            <a href="/producto/detail/<%=result[i].id%>">
            <div id=productContainer class="uk-child-width-1-2@s uk-child-width-1-4@m" uk-grid="masonry: true"
                style="height: 960px;">
                <div class="uk-card uk-card-default uk-flex uk-flex-center uk-flex-middle">
                    <div style="height: 300px; width: 550px;">
                        <img src="/img/<%= result[i].img %>" style="height: 75%; width: 100%; margin-bottom:3%" alt=""
                            class="imagen-producto">
                        <p id="name"><%= result[i].name %> </p>
                        <p id="price">$<%= result[i].price %> </p>
                    </div>
                </div>
            </div>
            </a>
        </div>
        <% } %>

        <% } %>



        <!-- END INDEX BODY -->

        <!-- PARTIAL FOOTER -->
        <%- include('./partials/footer')%>
        <!-- END OF PARTIAL FOOTER -->

        <!-- UIkit JS -->
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.4.6/dist/js/uikit.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/uikit@3.4.6/dist/js/uikit-icons.min.js"></script>
    </div>
</body>

</html>